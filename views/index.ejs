<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stuff Inventory</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="shortcut icon" type="image/jpg" href="/public/favicon.ico"/>

    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

    <div class="container">
        <div class="section" id="index">
            <h1>Purchase List:</h1>
            <table>
                <thead>

                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Cost ($)</th>
                        <th>More Info</th>
                    </tr>

                </thead>
                <tbody>
                    <% for (let i = 0; i < inventory.length; i++) { %>
                    <tr>
                        <td><%= inventory[i].item %></td>
                        <td><%= inventory[i].quantity %></td>
                        <td><%= inventory[i].cost %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href=<%= "/index/item/" + inventory[i].id %> ><i
                                    class="material-icons right">edit</i>Info/Edit</a>
                            <a class="btn-small waves-effect waves-light red" href="/index/item/<%= inventory[i].id %>/delete">
                                    <i class="material-icons right">delete</i>
                                    Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add Purchase:</h2>
            <form method = "post" action="/index">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="nameInput">Item Name:</label>
                        <input type="text" name="item" id="nameInput" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="quantityInput">Item Quantity:</label>
                        <input type="number" name="quantity" id="quantityInput" value=1 required>
                    </div>
                    <div class="input-field col s6">
                        <label for="costInput">Cost ($)</label>
                        <input type="number" name="cost" id="costInput" value=1 required>
                    </div> 
                    <div class="input-field col s6">
                        <label for="descriptionInput">Description (Optional)</label>
                        <input type="text" name="description" id="descriptionInput" class="validate" data-length="32">
                    </div>                                                        
                </div>
                <button class="btn waves-effect waves-light" type="submit"><i
                        class="material-icons right">send</i>Submit</button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>